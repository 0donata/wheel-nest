{
    "compilerOptions": {
      "target": "es6",
      "module": "commonjs",
      "allowJs": true,
      "jsx": "react",
      "baseUrl": ".",
      "paths": {
        "@/*": ["src/*"]
      },
      "checkJs": false,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "backend"],
    "exclude": ["node_modules", "public"]
  }